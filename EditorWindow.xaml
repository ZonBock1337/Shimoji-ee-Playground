<Window x:Class="ShimejiPlaygroundApp.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shimeji Playground Editor - 1.0.2" Height="700" Width="900" Background="#FF111111"
        KeyDown="EditorWindow_KeyDown">
    <DockPanel>
        <TabControl x:Name="TabControlMain" DockPanel.Dock="Top" Background="#FF222222" Foreground="White">
            <TabItem Header="Editor">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Window Title:" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="WindowTitleTextBox" Width="250" Margin="0,0,0,10" Text="Shimeji Playground"/>

                        <TextBlock Text="Window Size:" Foreground="White" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="WidthTextBox" Width="60" Text="500" Margin="0,0,5,0"/>
                            <TextBox x:Name="HeightTextBox" Width="60" Text="500"/>
                        </StackPanel>

                        <TextBlock Text="Playground Image:" Foreground="White" Margin="0,0,0,5"/>
                        <Button x:Name="SelectImageButton" Content="Select Image" Width="250" Click="SelectImage_Click"/>
                        <TextBlock x:Name="SelectedImageText" Text="assets/background.png" FontStyle="Italic" Foreground="LightGray" Margin="0,5,0,10" Height="19" Width="247"/>

                        <CheckBox x:Name="StartDirectPlaygroundCheckBox" Content="Skip Editor and start Playground" Foreground="White" Margin="0,10,0,0" Height="14" Width="248"/>
                        <Button x:Name="ResetDefaultsButton" Content="Reset to Default" Width="250" Margin="0,10,0,0" Click="ResetDefaults_Click"/>
                        <Button x:Name="SaveSettingsButton" Content="Save" Width="250" Margin="0,10,0,0" Click="SaveSettingsButton_Click"/>
                    </StackPanel>

                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" ClipToBounds="True" Margin="0,0,0,301" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.255"/>
                                <RotateTransform/>
                                <TranslateTransform X="0.746"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <Image x:Name="PreviewImage" Stretch="Uniform" Margin="6,6,7,7" />
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Playground">
                <StackPanel Margin="10">
                    <Button x:Name="RunButton" Content="Run" Width="120" Click="RunButton_Click"/>
                    <TextBlock Text="Use: Control + X to return to editor" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="Tip: Change in the Shimeji Settings 'InteractiveWindows=' to 'InteractiveWindows=Shimeji Playground'" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="      or if you use a custom title change it to the title you choose in the editor (standard = Shimeji Playground" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Help">
                <StackPanel Margin="10">
                    <TextBlock Text="Shortcuts:" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="      ->       Control + X to return to editor" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="      ->       Control + R to run the playground" Margin="0,3,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="      ->       Shift + S to run the playground" Margin="0,3,0,0" FontStyle="Italic" Foreground="White"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Credits">
                <StackPanel Margin="10">
                    <TextBlock Text="Developer:" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="           ZonBock1337 (X: @ctlauncherbt)" Margin="0,3,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="Character (Neuro and Evil):" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="           paccha (X: @paccha_7)" Margin="0,3,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="Playground:" Margin="0,10,0,0" FontStyle="Italic" Foreground="White"/>
                    <TextBlock Text="           ZonBock1337 (X: @ctlauncherbt)" Margin="0,3,0,0" FontStyle="Italic" Foreground="White"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>